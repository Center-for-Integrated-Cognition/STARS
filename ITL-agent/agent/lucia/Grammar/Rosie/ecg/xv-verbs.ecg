//	Throw away <x>
construction ThrowAway
   subcase of ActionVerb
   constructional
      constituents
         verb: THROW
         away: AWAY
   meaning: ActionDescriptor
      constraints
         self.m <--> verb.m

construction THROW
   subcase of ActionVerb
   form
      constraints
         self.f.orth <-- "throw"
   meaning: ActionDescriptor
      constraints
         self.m.class <-- @action
         self.m.name <-- "throw1"

construction AWAY
   subcase of Particle
   form
      constraints
         self.f.orth <-- "away"
   meaning
      constraints
         self.m.id <-- "away1"

