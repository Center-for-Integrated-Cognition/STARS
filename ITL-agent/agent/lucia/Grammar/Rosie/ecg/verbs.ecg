//	The following constructions were in the separate Rosie grammar
//	Pick [up]
construction PickUp
   subcase of ActionVerb
   constructional
      constituents
         verb: PickVerb
         up: UP
   meaning: ActionDescriptor
      constraints
         self.m <--> verb.m

construction PickVerb
   subcase of ActionVerb
   constructional
      constituents
         verb: PICK
   meaning: ActionDescriptor
      constraints
         self.m.class <-- @action
         self.m.name <-- "pick-up1"

construction PICK
   subcase of ActionVerb
   form
      constraints
         self.f.orth <-- "pick"

construction UP
    subcase of Particle
    form
        constraints
            self.f.orth <-- "up"

//	Put [down]
construction PutDown
   subcase of ActionVerbNeedsTarget
   constructional
      constituents
         verb: PutVerb
         down: DOWN
   meaning: ActionDescriptor
      constraints
         self.m <--> verb.m

construction PutVerb
   subcase of ActionVerbNeedsTarget
   constructional
      constituents
         verb: PUT
   meaning: ActionDescriptor
      constraints
         self.m.class <-- @action
         self.m.name <-- "put-down1"

construction PUT
    subcase of ActionVerb
    form
        constraints
            self.f.orth <-- "put"

//  Down can be either a particle or a preposition,
//  depending on context.
construction DOWN
    subcase of Particle, DirectionalPreposition
    form
        constraints
            self.f.orth <-- "down"
   meaning
      constraints
         self.m.name <-- "down1"

//  Turn on something
construction TurnOnVerb
   subcase of ActionVerb
   form
     constraints
        self.f.orth <-- "turn on"
   meaning: ActionDescriptor
      constraints
         self.m.class <-- @action
         self.m.name <-- "turn-on1"

construction TurnObjectOn
   subcase of Imperative
   constructional
      constituents
         verb: TURN
         object: RefExpr
         on: ON
   meaning: ActOnIt
      constraints
         self.m.action <--> verb.m
         self.m.object <--> object.m
         // Modify the verb to the other sense
         verb.m.name <-- "turn-on1"
         verb.m.action <-- "nil"

//	Store
construction StoreVerb
   subcase of ActionVerbNeedsTarget
   constructional
      constituents
         verb: STORE
   meaning: ActionDescriptor
      constraints
         self.m.class <-- @action
         self.m.name <-- "store1"

construction STORE
   subcase of ActionVerb
   form
      constraints
         self.f.orth <-- "store"

//	Move
construction MoveVerb
   subcase of ActionVerbNeedsTarget
   constructional
      constituents
         verb: MOVE
   meaning: ActionDescriptor
      constraints
         self.m.class <-- @action
         self.m.name <-- "move1"

construction MOVE
   subcase of ActionVerb
   form
      constraints
         self.f.orth <-- "move"

// Navigation
construction DRIVE
  subcase of DriveVerb
  form
     constraints
        self.f.orth <-- "drive"

construction DRIVE	//	"go" is a synonym
  subcase of DriveVerb
  form
     constraints
        self.f.orth <-- "go"

construction STOP
  subcase of SimpleMotionVerb
  form
     constraints
        self.f.orth <-- "stop"
   meaning
      constraints
         self.m.name <-- "stop1"

construction TURN
  subcase of TurnVerb
  form
     constraints
        self.f.orth <-- "turn"
   meaning
      constraints
         self.m.name <-- "turn1"

construction FOLLOW
  subcase of MotionVerb
  form
     constraints
        self.f.orth <-- "follow"
   meaning
      constraints
         self.m.name <-- "follow-wall1"

construction FORWARD-verb
   subcase of SimpleMotionVerb  // Forward can be an action all by itself
   form
     constraints
        self.f.orth <-- "forward"
   meaning
      constraints
         self.m.name <-- "go-to-location1"
